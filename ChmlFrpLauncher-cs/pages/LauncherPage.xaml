<Page x:Class="ChmlFrpLauncher_cs.pages.LauncherPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ChmlFrpLauncher_cs.pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LauncherPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="123*"/>
            <ColumnDefinition Width="37*"/>
        </Grid.ColumnDefinitions>
        <Border Grid.ColumnSpan="2">
            <ContentControl Margin="0,90,-1,-1" >
                <ContentControl.Content >
                    <Frame  Background="White" Source="pack://application:,,,/pages/Launcher.xaml" Margin="0,0,400,0" />
                </ContentControl.Content>
            </ContentControl>
        </Border>

        <Border Margin="400,90,0,0" Grid.ColumnSpan="2" >
            <Frame Source="pack://application:,,,/pages/TextBox-ini.xaml"  />
        </Border>
    </Grid>
</Page>
